{
  "build": { 
  "context": "..",
  "dockerfile": "Dockerfile" 
},
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [8000, 8888],
  "portsAttributes": {
    "8000": {
      "label": "Dev Application",
      "onAutoForward": "openBrowser"
    },
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "LabelStudio",
      "onAutoForward": "openBrowser"
    }
  }
}
